{% if param_plugins_ceph_sessions is defined and param_plugins_ceph_sessions is iterable and param_plugins_ceph_sessions is not string and param_plugins_ceph_sessions is not mapping %}

{% for session in param_plugins_ceph_sessions %}
{% if session["user"] is defined and session["user"] %}
Plugins.Ceph.Sessions.{{ session["name"] }}.User={{ session["user"] }}
{% endif %}
{% endfor %}
