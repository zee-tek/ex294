{% for session in param_plugins_ceph_sessions %}
{% if session["uri"] is defined and session["uri"] %}
Plugins.Ceph.Sessions.{{ session["name"] }}.Uri={{ session["uri"] }}
{% endif %}
{% endfor %}
{% endif %}